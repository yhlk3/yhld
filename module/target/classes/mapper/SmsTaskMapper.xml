<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.module.sms.task.mapper.SmsTaskMapper">

    <insert id="insert" parameterType="com.example.module.sms.task.entity.SmsTask"
            useGeneratedKeys="true" keyProperty="id">
        INSERT INTO sms_task (
        <if test="task.phone != null and task.phone != ''">phone,</if>
        <if test="task.content != null and task.content != ''">content,</if>
        <if test="task.scheduledTime != null">scheduled_time,</if>
        <if test="task.status != null">status</if>
        ) VALUES (
        <if test="task.phone != null and task.phone != ''">#{task.phone},</if>
        <if test="task.content != null and task.content != ''">#{task.content},</if>
        <if test="task.scheduledTime != null">#{task.scheduledTime},</if>
        <if test="task.status != null">#{task.status}</if>
        )
    </insert>
    <update id="setStatus" parameterType="java.lang.String">
        UPDATE sms_task
        SET status = 1
            <if test="ids != null and ids != ''">
                id IN (${ids})
            </if>
    </update>

</mapper>
